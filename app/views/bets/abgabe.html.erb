<form method="get">
	<%= select_tag(:cup_id, options_from_collection_for_select(@cup_options, "id", "name", selected = @cup.id)) %>
	<%= select_tag(:round_id, options_from_collection_for_select(@round_options, "id", "name", selected = @round.id)) %>
	<input type="submit" value="Filter" %>
</form>

<% unless @cup.nil? %>
	
	<div class="alert alert-info">
		<strong>Achtung!</strong> Aus technischen Gründen muss jeder Tipp mittels <i type="submit" class="icon-check"></i> Button einzeln abgespeichert werden. In einer der nächsten Updates wird es einen einzelnen "Speichern"-Button für den ganzen Spieltag geben. Sorry... 
	</div>
	
	<div class="main_content">
		<div class="change_round">
			<% unless @previousround.nil? %>
				<%= link_to 'vorheriger Spieltag', abgabe_path(:round_id => @previousround.id) %>
			<% end -%>
			<% unless @nextround.nil? %>
				<%= link_to 'nächster Spieltag', abgabe_path(:round_id => @nextround.id), :class => "nextround" %>
			<% end -%>
		</div>


		<h3><%= @cup.name %>, <%= @round.name %></h3>
		<table class="table table-striped table-condensed">
			<thread>
				<tr>
					<th>Anstoß</th>
					<th></th>
					<th>Ergebnis</th>
					<th>Tipp</th>
					<th>Punkte</th>
				</tr>
			</thread>
			<tbody>
			<% @games.each do |game| %>
				<% bet = @bets.find_by_game_id(game.id) %>
				<tr>
					<td><%= game.kickoff.strftime("%d.%m.%y %H:%M") %></td>
					<td><%= Team.find(game.home_team).name %> - <%= Team.find(game.away_team).name %></td>
					<td>
						<% if game.home_score.nil? %>
							 - : -
						<% else %>
							<%= game.home_score %> : <%= game.away_score %>
						<% end %>
					</td>
					<td>
						<% if Time.now >= game.kickoff %>
							<% if @bets.exists?(:game_id => game.id) %>
								<%= bet.home_bet %> : <%= bet.away_bet %>
							<% else %>
								- : -
							<% end %>
						<% else %>
							
							<!-- hier wird Form eingefügt -->
							<% if @bets.exists?(:game_id => game.id) %>
								<%= form_for(bet) do |f| %>
			
									<%= f.hidden_field :game_id, :value => game.id %>

									<span class="field">
										<%= f.number_field :home_bet %> 
									</span> : 
	 
									<span class="field"> 
										<%= f.number_field :away_bet %> 
									</span>

								    <button type="submit" class="btn btn-mini" title="aktualisieren">
										<i type="submit" class="icon-edit"></i>
									</button>


									 </span>
									 
									 	<%= link_to bet, :method => :delete, :title => "löschen", :confirm => "sicher?" do %>
									 		<i class="icon-remove"></i>
									 	<% end -%>

								<% end -%>
							<% else %>
								<%= form_for(@bet) do |f| %>
		
									<%= f.hidden_field :game_id, :value => game.id %>

									<span class="field">
										<%= f.number_field :home_bet %> 
									</span> : 
								
									<span class="field"> 
										<%= f.number_field :away_bet %> 
									</span>
									<button type="submit" class="btn btn-mini" title="speichern">
										<i class="icon-check"></i>
								<% end -%>
							<% end -%>
						<% end %>
					</td>
					<td>
						<% if game.home_score.nil? %>
							--
						<% else %>
							<% if bet.nil? %>
								-
							<% else %>
								<%= bet.points %>
							<% end %>
						<% end %>
					</th>
				</tr>		
			<% end %>
			</tbody>
		</table>
	</div>
<% end -%>