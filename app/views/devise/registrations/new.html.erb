<h2>Registrieren</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= token_tag %>

  <div class="devise_form"><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div class="devise_form"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="devise_form"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="devise_form"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "registrieren" %></div>
<% end %>

<%= render "links" %>
