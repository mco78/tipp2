<div class="main_content">
	<h2>Community-Neuigkeiten von "<%= link_to @community.name, @community %>"</h2>
	<!-- hier m체ssen sp채ter die passenden News zu der Community
	ausgw채hlt werden. Die muss 체ber den Controller geschehen. -->
	<p></p>
	<% @posts.each do |post| %>
		<%= post.created_at.strftime("%d.%m.%y %H:%M")%>
		<h4><%= post.headline %></h4>
		<p><%= truncate(simple_format(post.content), :length => 500, :separator => ' ') %>
		<% if post.content.length > 500 %>
			<%= link_to "mehr", post %>
		<% end %>
		</p>
	<% end %>
</div>