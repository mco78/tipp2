<div class="row">
	<% if user_signed_in? %>
			<div class="span8" id="user_news">
				<% if @user.community_id.nil? %>
					<%= render 'shared/community_menu' %>
					<%= render 'tipp2_news' %>
				<% else %>
					<%= render 'community_news' %>
				<% end %>
			</div>
	<% else %>
		<div class="span8" id="welcome">
			<div class="hero-unit">
				<%= render 'welcome' %>
			</div>
		</div>
	<% end %>


	<div class="span4">

		<%= render 'feedback' %>

		<div class="well">
			<h2>Nächste Spiele</h2>
			<table class="table table-striped table-condensed">
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<% if user_signed_in? %>
						<th>Tipp</th>
						<th>Anstoß</th>
					<% else %>
						<th></th>
						<th></th>
					<% end %>
				</tr>
				<% @games.each do |game| %>
					<tr>
						<% home_team = Team.find(game.home_team) %>
						<% away_team = Team.find(game.away_team) %>
						<td><%= truncate(home_team.name, :length => 10) %></td>
						<td> - </td>
						<td><%= truncate(away_team.name, :length => 10) %></td>
						<% if user_signed_in? %>
							<% user_bet = @bets.where(:game_id => game.id).first %>
							<% if user_bet.nil? %>
								<td>- : -</td>
							<% else %>
								<td><%= user_bet.home_bet %> : <%= user_bet.away_bet %></td>
							<% end %>
						<% end %>
						<td><%= distance_of_time_in_words(Time.now, game.kickoff) %></td>
					</tr>	
				<% end %>
			</table>
		</div>
	</div>

</div>



