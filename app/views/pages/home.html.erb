<% if user_signed_in? %>
	<div class="row">
		<div class="span8" id="welcome">
			<div class="hero-unit">
				<h1>tipp2 - Das Fussball Tippspiel</h1>
				<p>tipp2 ist ein klassisches Fussball-Tippspiel. Melde Dich an, tippe auf Spiele, sammel Punkte und gewinne gegen andere Spieler.</p>
				
				<p><%= link_to "Jetzt registrieren", new_user_registration_path, :class => "btn btn-primary btn-large" %></p>
				<%= link_to "Schon angemeldet? Log in!",  user_session_path, :class => "zusatzlink" %>
			</div>
		</div>
<% else %>
		<div class="row">
			<div class="span8" id="user_news">
				<div class="news">
					<h2>Neuigkeiten</h2>
					<p></p>
					<% @posts.each do |post| %>
						<%= post.created_at.strftime("%d.%m.%y %H:%M")%>
						<h4><%= post.headline %></h4>
						<p><%= truncate(post.content, :length => 120, :separator => ' ') %>
						<% if post.content.length > 120 %>
							<%= link_to "mehr", post %>
						<% end %>
						</p>
					<% end %>
				</div>
			</div>
<% end %>


	<div class="span4">
		<h2>Nächste Spiele</h2>
		<table>
			<tr>
				<th></th>
				<th></th>
				<th></th>
				<th>Tipp</th>
				<th>Anstoß</th>
			</tr>
			<% @games.each do |game| %>
				<tr>
					<% home_team = Team.find(game.home_team) %>
					<% away_team = Team.find(game.away_team) %>
					<td><%= home_team.acronym %></td>
					<td> - </td>
					<td><%= away_team.acronym %></td>
					<% if user_signed_in? %>
						<% user_bet = @bets.where(:game_id => game.id).first %>
						<% if user_bet.nil? %>
							<td>- : -</td>
						<% else %>
							<td><%= user_bet.home_bet %> : <%= user_bet.away_bet %></td>
						<% end %>
					<% end %>
					<td><%= distance_of_time_in_words(Time.now, game.kickoff) %></td>
				</tr>	
			<% end %>
		</table>
	</div>

</div>



