<h3>Posts bearbeiten</h3>

<%= will_paginate %>

<table class="table table-striped table-condensed">
  <tr>
    <th>Headline</th>
    <th>Kategorie</th>
    <th>User</th>
    <th>erstellt am</th>
    <th>bearbeitet am</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.headline %></td>
    <td><%= post.category %></td>
    <% if post.user_id.nil? %>
      <td></td>
    <% else %> 
      <td><%= User.find(post.user_id).username %></td>
    <% end %>
    <td><%= post.created_at.strftime("%d.%m.%y %H:%M") %></td>
    <td><%= post.updated_at.strftime("%d.%m.%y %H:%M") %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

