<h1>User Index</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Username</th>
    <th>E-Mail</th>
    <th>Erstellt am</th>
    <th>Letzer Log In</th>
    <th>Log Ins</th>
    <th>Tipps</th>
    <th></th>
  </tr>

<% @users.reverse.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.created_at.strftime("%d.%m.%y %H:%M") %></td>
    <% if user.last_sign_in_at.nil? %>
      <td></td>
    <% else %>
      <td><%= user.last_sign_in_at.strftime("%d.%m.%y %H:%M") %></td>
    <% end %>
    <td><%= user.sign_in_count %></td>
    <td><%= user.bets.count %></td>
    <td><%= link_to 'Löschen', user, :confirm => 'Bist Du sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>

